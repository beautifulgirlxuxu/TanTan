/* @import "../../weui.wxss"; */
page {
    background-color:rgba(0, 0, 0, 0.705);
    opacity: .8;
}
.page__hd {
    width: 100%;
    height: 240rpx;
    /* font-size: 24rpx; */
    color: white;
    text-align: left;
}
.page__title text{
    font-size: 40rpx;
    padding-left: 38rpx;
}
.page__hd_moon {
    width: 90%;
    height: 80rpx;
    background-color:grey;
    margin: 20rpx auto;
    border-radius: 10rpx;
}
.page__hd_moon image{
    width: 50rpx;
    height: 50rpx;
    margin: 15rpx 30rpx;
    display: inline-block;
    float: left;
}
.page__hd_moon text{
    font-size: 28rpx;
    padding-top: 20rpx;
    display: inline-block;
    float: left;
}
.swiper-tab {
    display: flex;
    align-items: center;
    justify-content: center;
}
.selected{  
    width: 100%;
    border-bottom: 4rpx solid #F788AB;  
  }  
.swiper-tab-item {
    width: 50%;
    font-size: 26rpx;
    color: white;
}
.swiper-item{
    width: 100%;
    /* height: 100%; */
    height: 1500rpx;
    overflow-y:scroll;
}
.weui-tab__content {
    width: 100%;
    height: 150rpx;
    box-sizing: border-box;
}
.weui-media-box__hd {
    width: 200rpx;
    height: 100rpx;
    float: left;
}
.weui-media-box__hd image {
    width: 110rpx;
    height: 110rpx;
    border-radius: 60rpx;
    margin-top: 20rpx;
    margin-left: 20rpx;
    float: left;
}
.weui-media-box__bd {
    width: 550rpx;
    height: 150rpx;
    border-bottom: .5rpx solid rgb(158, 141, 141);
    float: right;
}
.weui-media-box__nickname {
    width: 380rpx;
    height: 50rpx;
    float: left;
    font-size: 36rpx;
    color: white;
    text-align: left;
    margin-top: 25rpx;
    margin-left: 10rpx;
}
.weui-media-box__message {
    /* width: 550rpx; */
    height: 30rpx;
    float: left;
    font-size: 32rpx;
    color: grey;
    text-align: left;
    margin-top: 80rpx;
    margin-left: -380rpx;
}
.active {
    border-bottom: 4rpx solid #F788AB;
}